{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023", "DOM"], // ¡Añade "DOM" para React!
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "react-jsx", // Necesario para React
    "skipLibCheck": true,
    "baseUrl": "./", // Ruta base para imports
    "paths": {
      "@/*": ["src/*"] // Opcional: aliases para imports
    }
  },
  "include": ["src", "vite.config.ts"] // ¡Incluye todo tu código!
}
